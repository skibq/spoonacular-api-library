{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["es2017", "es7", "es6", "dom"],
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "routes/*": ["src/routes/*"],
      "src/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}

